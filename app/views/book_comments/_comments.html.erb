<% book.book_comments.each do |book_comment| %>
  <tr>
    <td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, format:'jpeg', fallback: "no-image-icon.jpg") %></td>
    <td><%= book_comment.user.name %></td>
    <td><%= book_comment.comment %></td>
    
    <!--ここから削除機能-->
    <td>
      <%= render 'book_comments/destroy_comment', book_comment: book_comment %>
    </td>
      <!--ここまで-->
    
  </tr>
<% end %>
