<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	</tr>
	<tr>
	  <th><%= link_to follows_user_path(user) do %>
	    フォロー数：<%= user.followings.count %></th>
	    <% end %>
    <th><%= link_to followers_user_path(user) do %>
      フォロワー数：<%= user.followers.count %></th>
      <% end %>
  </tr>
</table>

<div class='row'>
  <% if current_user != user %>
      <% if user.followed_by?(current_user) %>
        <td><%= link_to "フォローを外す",user_relationships_path(user.id), method: :delete %></td>
      <% else %>
        <td><%= link_to "フォローする",user_relationships_path(user.id), method: :post %></td>
      <% end %>
  <% else %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% end %>
  
</div>